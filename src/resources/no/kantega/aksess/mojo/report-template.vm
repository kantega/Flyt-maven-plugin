<html>
<head>
    <style type="text/css">
        img {
            border: 1px solid gray;
        }
        body {
            font-family:sans-serif;
            background-color: #d3d3d3;
        }
    </style>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /> 
</head>

<body>

    #foreach($page in $pages)
    <a name="${page.id}"></a>
    <h2>${page.title} (${page.displayTemplate})</h2>
    <p>
        #foreach($d in $drivers)
            <a href="../${d.id}/index.html#${page.id}" #if($driver.id == $d.id) style="font-weight:bold;" #end >${d.id}</a> |
        #end
    </p>
    <img src="${page.id}.png"><br>
    #end

</body>
</html>