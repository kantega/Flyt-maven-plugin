<?xml version="1.0" encoding="utf-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>renatesenteret</display-name>

    <description>renatesenteret</description>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext-renatesenteret.xml</param-value>
    </context-param>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/oap/admin/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/renate/admin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>cvpdfgenerator</servlet-name>
        <servlet-class>no.kantega.renate.control.CvPdfGenerator</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>renate</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>renate</servlet-name>
        <url-pattern>/renate/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cvpdfgenerator</servlet-name>
        <url-pattern>/cv.pdf</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/404.jsp</location>
    </error-page>

    <error-page>
        <exception-type>org.springframework.web.HttpSessionRequiredException</exception-type>
        <location>/formSessionError.jsp</location>
    </error-page>

    <session-config>
        <!-- Session timeout in minutes -->
        <session-timeout>120</session-timeout>
    </session-config>


</web-app>
